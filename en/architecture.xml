                    </row>
                    <row>
                        <entry>var/httpd/htdocs/images/Standard/</entry>
                        <entry>icons and pictures</entry>
                    </row>
                    <row>
                        <entry>scripts/</entry>
                        <entry>misc</entry>
                    </row>
                    <row>
                        <entry>scripts/test/</entry>
